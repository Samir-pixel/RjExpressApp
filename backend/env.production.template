# Production Environment Variables Template
# Скопируйте этот файл в .env.production и заполните значения

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# WhatsApp (опционально)
WHATSAPP_API_KEY=

# CORS Configuration - укажите ваш домен
# Для одного домена: https://rjexpressinc.io
# Для нескольких: https://rjexpressinc.io,https://www.rjexpressinc.io
ALLOWED_ORIGINS=https://rjexpressinc.io,https://www.rjexpressinc.io

# Environment
ENVIRONMENT=production

